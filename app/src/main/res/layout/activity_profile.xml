<?xml version="1.0" encoding="utf-8"?>
<!-- activity_profile.xml - Редактирование профиля -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Шапка -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:padding="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мой профиль"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Аватарка -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/ivProfileAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_avatar"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <!-- Кнопка изменить аватарку -->
            <Button
                android:id="@+id/btnChangeAvatar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="ИЗМЕНИТЬ АВАТАРКУ"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:layout_marginBottom="24dp"
                android:textStyle="bold"/>

            <!-- Ник -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ник"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etNickname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Введите ник"
                android:textColor="@color/dark_gray"
                android:textColorHint="#B0B0B0"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Город -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Город"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Введите город"
                android:textColor="@color/dark_gray"
                android:textColorHint="#B0B0B0"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- О себе -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="О себе"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etBio"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Расскажите о себе (макс 500 символов)"
                android:textColor="@color/dark_gray"
                android:textColorHint="#B0B0B0"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:gravity="top"
                android:maxLength="500"
                android:inputType="textMultiLine"
                android:layout_marginBottom="24dp"/>

            <!-- Кнопки -->
            <Button
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="СОХРАНИТЬ ПРОФИЛЬ"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ИЗМЕНИТЬ ПАРОЛЬ"
                android:textColor="@color/purple_dark"
                android:background="@android:color/transparent"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

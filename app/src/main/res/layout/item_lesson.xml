<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Иконка статуса -->
        <ImageView
            android:id="@+id/ivLessonStatus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_lesson_locked"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <!-- Контент урока -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/ivChevron"
            android:layout_toEndOf="@id/ivLessonStatus"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvLessonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="День 1: Введение в тренировки"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvLessonDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Изучите базовые принципы силовых тренировок"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:alpha="0.7"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_experience"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+50 XP"
                    android:textColor="@color/purple_dark"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvLessonType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Ежедневный"
                    android:textColor="@color/dark_gray"
                    android:textSize="12sp"
                    android:layout_marginStart="12dp"
                    android:alpha="0.7"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Шеврон -->
        <ImageView
            android:id="@+id/ivChevron"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>